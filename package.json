{
  "name": "Li7z",
  "version": "1.2.1",
  "description": "基于7z的解压缩软件",
  "7zDisclaimer": "本软件基于7z开源项目开发，7z及其相关商标归原作者 Igor Pavlov 所有。本项目仅用于学习和交流，未与7z官方有任何关联。",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-linux": "electron-builder --linux",
    "test": "node test.js"
  },
  "author": "Li7z",
  "license": "MIT",
  "devDependencies": {
    "electron": "^22.0.0",
    "electron-builder": "^23.6.0"
  },
  "build": {
    "appId": "com.li7z.app",
    "productName": "Li7z",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules",
      "resources/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "icon.png"
    }
  },
  "dependencies": {
    "electron-log": "^5.4.3",
    "iconv-lite": "^0.7.0"
  }
}
